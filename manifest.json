{
  "name": "Web Visor",
  "version": "1.0",
  "icons":{
      "16":"icon.png",
      "48":"icon.png",
      "128":"icon.png"
    },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com ; object-src 'self'",
  "description": "Web Visor",
  "browser_action": {
    "default_icon": "icon.png"	  
  },
  "background": {
    "page": "background.html"
  },
  "web_accessible_resources":["css/*","images/*","js/*"],
  "content_scripts": [
    {
      "matches": ["https://*/*","http://*/*"],      
      "js": ["js/libs/jquery-1.10.2.min.js", "js/libs/bootstrap.min.js","js/hello.min.js","js/libs/sketch.min.js","js/login.js","js/sidebar.js","js/draw.js","js/app.js"],
      "css":["css/bootstrap.min.css","css/draw.css","css/sidebar.css"]
    }
  ],
  "permissions": [
    "http://*/*", "tabs","cookies"
  ]
}